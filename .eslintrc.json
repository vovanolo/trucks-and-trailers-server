{
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "linebreak-style": "off",
    "brace-style": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "error",
      2
    ],
    "no-trailing-spaces": ["error", {
      "skipBlankLines": true
    }],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }]
  }
}
